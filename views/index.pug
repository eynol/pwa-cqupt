extends layout

block content
  #app
    transition(name="fade")
      component(v-bind:is='currentView' v-bind:list="originList" v-bind:today="todayOption" v-bind:tomorrow="tomorrowOption" v-on:success="login")        
  
  script(type="text/x-template" id="tpl-login")
    .box.login
      .form
        h1 重邮课表
        p 
          input(type="text" v-model="fakeId" maxlength='10' v-on:keydown="fakeIdKeyDown" placeholder="请输入您的学号") 
        p
          a(href="javascript:;"  v-on:click="enterApp").btn 进入应用
  script(type="text/x-template" id="tpl-main-panel")
    .main-panel
      .container-wrapper
        .container
          .content
            .content_today
              .panel
                .notify(v-if="todayList.length!==0")
                  h1 今日有课
                .card(v-for="item in todayList")
                  .card-aside
                    span.room {{item.where}}
                    br
                    span.order {{item.whichClass}}
                  .card-main
                    p.class-name {{item.className}}
                    p.who {{item.who}}
                    p.class-id {{item.classID}}
                
            .content_tomorrow
              .panel
                .notify(v-if="tomorrowList.length!==0")
                  h1 明日有课
                .card(v-for="item in list")
                  .card-aside
                    span.room {{item.where}}
                    br
                    span.order {{item.whichClass}}
                  .card-main
                    p.class-name {{item.className}}
                    p.who {{item.who}}
                    p.class-id {{item.classID}}
            .content_all
              a(href="javascript:;").btn 全部课表
      .nav-bar
        a(href="javascript:;")
          i.icon.list.active
        a(href="javascript:;")
          i.icon.setting

  script(src='./lib/vue/vue.js')
  script(src="./js/index.js")
  